<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_container_canvas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@color/colorPrimary"
            android:padding="10dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnLoad"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/ic_image_black_96dp_white"/>

                <ImageView
                    android:id="@+id/btnColor"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_create_black_96dp_white"/>

                <ImageView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_mood_black_24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_send_black_96dp_white"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="#000000"
            android:orientation="horizontal"
            android:padding="10dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnHappy"
                    android:layout_width="60dip"
                    android:layout_height="45dip"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/emoji_happy"
                    android:tint="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/btnLove"
                    android:layout_width="60dip"
                    android:layout_height="45dip"
                    android:layout_weight="1"

                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/emoji_love"
                    android:tint="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/btnNerd"
                    android:layout_width="60dip"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/emoji_nerd"
                    android:tint="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/btnDead"
                    android:layout_width="60dip"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/emoji_dead"
                    android:tint="@android:color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/backgrounds/scenic" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>